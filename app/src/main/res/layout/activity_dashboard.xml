<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".profile.DashboardActivity">


    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="321dp"
        android:layout_height="325dp"
        android:layout_marginTop="256dp"
        android:layout_marginBottom="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/startWorkoutNav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/secondary"
                android:text="@string/start_a_workout"
                android:textColor="#F6F3F5"
                android:textStyle="normal" />

            <Button
                android:id="@+id/WorkoutLogsBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/secondary"
                android:text="@string/workout_logs"
                android:textColor="#FAF6F6"
                android:textStyle="normal" />

            <Button
                android:id="@+id/goToProfilesBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/secondary"
                android:text="@string/profile"
                android:textColor="#FAF6F6"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/testest"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="vertical" />

        <Button
            android:id="@+id/LogoutBtn"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary"
            android:text="@string/logout"
            android:textAlignment="center"
            android:textColor="#e1f2ee"
            android:textStyle="normal" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="342dp"
        android:layout_height="100dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="-15dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="129dp"
        android:contentDescription="@string/NumReps"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/logo" />
</androidx.constraintlayout.widget.ConstraintLayout>